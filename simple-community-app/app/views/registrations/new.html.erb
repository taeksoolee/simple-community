<div class="min-h-screen flex items-center justify-center bg-gray-50 py-12 px-4 sm:px-6 lg:px-8">
  <div class="max-w-md w-full space-y-8">
    <div>
      <h2 class="mt-6 text-center text-3xl font-extrabold text-gray-900">
        회원가입
      </h2>
    </div>
    <%= form_with model: @user, url: registration_path, class: "mt-8 space-y-6" do |form| %>
      <% if @user.errors.any? %>
        <div class="rounded-md bg-red-50 p-4">
          <div class="flex">
            <div class="ml-3">
              <h3 class="text-sm font-medium text-red-800">
                <%= pluralize(@user.errors.count, "개의") %> 오류가 발생했습니다
              </h3>
              <div class="mt-2 text-sm text-red-700">
                <ul class="list-disc pl-5 space-y-1">
                  <% @user.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                  <% end %>
                </ul>
              </div>
            </div>
          </div>
        </div>
      <% end %>

      <div class="rounded-md shadow-sm space-y-4">
        <div>
          <%= form.label :email_address, "이메일", class: "block text-sm font-medium text-gray-700 mb-2" %>
          <%= form.email_field :email_address, required: true, autofocus: true,
              class: "block w-full px-4 py-3 rounded-lg border-2 border-gray-300 placeholder-gray-400 text-gray-900 focus:outline-none focus:ring-2 focus:ring-indigo-200 focus:border-indigo-500 transition duration-200 sm:text-sm",
              placeholder: "이메일 주소를 입력하세요" %>
        </div>
        <div>
          <%= form.label :password, "비밀번호", class: "block text-sm font-medium text-gray-700 mb-2" %>
          <%= form.password_field :password, required: true,
              class: "block w-full px-4 py-3 rounded-lg border-2 border-gray-300 placeholder-gray-400 text-gray-900 focus:outline-none focus:ring-2 focus:ring-indigo-200 focus:border-indigo-500 transition duration-200 sm:text-sm",
              placeholder: "비밀번호 (6자 이상)" %>
        </div>
        <div>
          <%= form.label :password_confirmation, "비밀번호 확인", class: "block text-sm font-medium text-gray-700 mb-2" %>
          <%= form.password_field :password_confirmation, required: true,
              class: "block w-full px-4 py-3 rounded-lg border-2 border-gray-300 placeholder-gray-400 text-gray-900 focus:outline-none focus:ring-2 focus:ring-indigo-200 focus:border-indigo-500 transition duration-200 sm:text-sm",
              placeholder: "비밀번호를 다시 입력하세요" %>
        </div>
      </div>

      <div>
        <%= form.submit "가입하기", class: "group relative w-full flex justify-center py-2 px-4 border border-transparent text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
      </div>

      <div class="text-center">
        <p class="text-sm text-gray-600">
          이미 계정이 있으신가요?
          <%= link_to "로그인", new_session_path, class: "font-medium text-indigo-600 hover:text-indigo-500" %>
        </p>
      </div>
    <% end %>
  </div>
</div>
