<div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
  <div class="bg-white dark:bg-gray-800 shadow overflow-hidden sm:rounded-lg border border-gray-200 dark:border-gray-700">
    <div class="px-4 py-5 sm:px-6 flex justify-between items-start">
      <div>
        <h1 class="text-3xl font-bold text-gray-900 dark:text-gray-100"><%= @post.title %></h1>
        <p class="mt-1 text-sm text-gray-500 dark:text-gray-400">
          작성자: <%= @post.user.email_address %> |
          <%= @post.created_at.strftime('%Y-%m-%d %H:%M') %>
        </p>
      </div>
      <% if Current.user == @post.user %>
        <div class="flex space-x-2">
          <%= link_to "수정", edit_post_path(@post), class: "inline-flex items-center px-3 py-2 border border-gray-300 dark:border-gray-600 shadow-sm text-sm leading-4 font-medium rounded-md text-gray-700 dark:text-gray-200 bg-white dark:bg-gray-700 hover:bg-gray-50 dark:hover:bg-gray-600" %>
          <%= button_to "삭제", post_path(@post), method: :delete, data: { confirm: "정말 삭제하시겠습니까?" },
              class: "inline-flex items-center px-3 py-2 border border-transparent text-sm leading-4 font-medium rounded-md text-white bg-red-600 hover:bg-red-700" %>
        </div>
      <% end %>
    </div>
    <div class="border-t border-gray-200 dark:border-gray-700 px-4 py-5 sm:px-6">
      <div class="prose dark:prose-invert max-w-none text-gray-900 dark:text-gray-200">
        <%= simple_format(@post.body) %>
      </div>
    </div>
  </div>

  <div class="mt-6">
    <%= link_to "← 목록으로", posts_path, class: "text-indigo-600 dark:text-indigo-400 hover:text-indigo-500 dark:hover:text-indigo-300" %>
  </div>

  <div class="mt-8 border-t border-gray-200 pt-8">
    <div class="flex items-center justify-between mb-6">
      <h2 class="text-2xl font-bold text-gray-900 dark:text-gray-100">
        댓글 <span class="text-indigo-600 dark:text-indigo-400"><%= @post.comments.where(commentable_type: "Post").count %></span>개
      </h2>
    </div>

    <div id="comments" class="mb-8">
      <% if @top_level_comments.any? %>
        <div class="space-y-4">
          <% @top_level_comments.each do |comment| %>
            <%= render partial: 'comments/comment', locals: { comment: comment, depth: 0 } %>
          <% end %>
        </div>
        <div class="mt-6">
          <%= paginate @top_level_comments, param_name: :comments_page %>
        </div>
      <% else %>
        <div class="text-center py-12 bg-gray-50 dark:bg-gray-800 rounded-lg border border-gray-200 dark:border-gray-700">
          <%= heroicon "chat-bubble-left", variant: :outline, options: { class: "mx-auto h-12 w-12 text-gray-400" } %>
          <p class="mt-4 text-gray-500 dark:text-gray-400 text-lg">아직 댓글이 없습니다</p>
          <p class="mt-2 text-gray-400 dark:text-gray-500 text-sm">첫 댓글을 작성해보세요!</p>
        </div>
      <% end %>
    </div>

    <div class="sticky bottom-0 bg-gray-50 dark:bg-gray-900 border-t-2 border-gray-200 dark:border-gray-700 pt-6">
      <% if Current.user %>
        <div class="bg-white dark:bg-gray-800 rounded-lg border-2 border-indigo-200 dark:border-indigo-800 shadow-lg" data-controller="form">
          <div class="bg-gradient-to-r from-indigo-50 to-blue-50 dark:from-indigo-900/30 dark:to-blue-900/30 px-6 py-3 border-b border-indigo-100 dark:border-indigo-800">
            <h3 class="text-lg font-semibold text-gray-800 dark:text-gray-200 flex items-center">
              <%= heroicon "pencil-square", variant: :outline, options: { class: "w-5 h-5 mr-2 text-indigo-600" } %>
              댓글 작성
            </h3>
          </div>
          <%= form_with url: comments_path, method: :post, class: "p-6 space-y-4", data: { action: "submit->form#handleSubmit" } do |form| %>
            <%= hidden_field_tag "comment[commentable_type]", "Post" %>
            <%= hidden_field_tag "comment[commentable_id]", @post.id %>

            <div>
              <%= text_area_tag "comment[body]", nil, rows: 4,
                  class: "block w-full px-4 py-3 rounded-lg border-2 border-gray-300 dark:border-gray-600 shadow-sm placeholder-gray-400 dark:placeholder-gray-500 bg-white dark:bg-gray-700 text-gray-900 dark:text-gray-200 focus:outline-none focus:border-indigo-500 focus:ring-2 focus:ring-indigo-200 transition duration-200 sm:text-sm resize-none",
                  placeholder: "댓글을 입력하세요... (Ctrl+Enter로 전송)",
                  data: { form_target: "body", action: "blur->form#validateRequired input->form#clearErrorOnInput" } %>
            </div>

            <div class="flex items-center justify-between">
              <p class="text-sm text-gray-500 dark:text-gray-400">
                <span class="font-medium text-gray-700 dark:text-gray-300"><%= Current.user.email_address %></span>
                님으로 댓글 작성
              </p>
              <%= submit_tag "댓글 등록", class: "px-6 py-3 border border-transparent text-sm font-semibold rounded-lg text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 transition duration-200 shadow-md hover:shadow-lg" %>
            </div>
          <% end %>
        </div>
      <% else %>
        <div class="p-8 bg-gradient-to-r from-indigo-50 via-blue-50 to-purple-50 dark:from-indigo-900/20 dark:via-blue-900/20 dark:to-purple-900/20 rounded-lg border-2 border-indigo-200 dark:border-indigo-800 shadow-md text-center">
          <%= heroicon "lock-closed", variant: :outline, options: { class: "mx-auto h-10 w-10 text-indigo-400 mb-4" } %>
          <p class="text-gray-800 dark:text-gray-200 text-lg font-semibold mb-2">
            댓글을 작성하려면 로그인이 필요합니다
          </p>
          <p class="text-gray-600 dark:text-gray-400 mb-4">
            로그인하고 다른 사용자들과 소통해보세요
          </p>
          <div class="flex justify-center space-x-3">
            <%= link_to "로그인", new_session_path, class: "inline-flex items-center px-5 py-2.5 border border-transparent text-sm font-medium rounded-lg text-white bg-indigo-600 hover:bg-indigo-700 shadow-md hover:shadow-lg transition duration-200" %>
            <%= link_to "회원가입", new_registration_path, class: "inline-flex items-center px-5 py-2.5 border-2 border-indigo-600 dark:border-indigo-500 text-sm font-medium rounded-lg text-indigo-600 dark:text-indigo-400 bg-white dark:bg-gray-800 hover:bg-indigo-50 dark:hover:bg-gray-700 transition duration-200" %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
