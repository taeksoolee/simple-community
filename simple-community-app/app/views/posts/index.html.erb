<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
  <div class="flex justify-between items-center mb-6">
        <h1 class="text-3xl font-bold text-gray-900 dark:text-gray-100">게시글 목록</h1>
    <% if Current.user %>
      <%= link_to "새 글 작성", new_post_path, class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700" %>
    <% end %>
  </div>

  <div class="bg-white dark:bg-gray-800 shadow overflow-hidden sm:rounded-md border border-gray-200 dark:border-gray-700">
    <% if @posts.any? %>
        <ul class="divide-y divide-gray-200 dark:divide-gray-700">
        <% @posts.each do |post| %>
          <li>
            <%= link_to post_path(post), class: "block hover:bg-gray-50 dark:hover:bg-gray-700" do %>
              <div class="px-4 py-4 sm:px-6">
                <div class="flex items-center justify-between">
                  <p class="text-lg font-medium text-indigo-600 dark:text-indigo-400 truncate">
                    <%= post.title %>
                  </p>
                  <div class="ml-2 flex-shrink-0 flex">
                    <p class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-green-100 text-green-800">
                      <%= post.created_at.strftime('%Y-%m-%d %H:%M') %>
                    </p>
                  </div>
                </div>
                <div class="mt-2 sm:flex sm:justify-between">
                  <div class="sm:flex">
                    <p class="flex items-center text-sm text-gray-500 dark:text-gray-400">
                      작성자: <%= post.user.email_address %>
                    </p>
                  </div>
                </div>
              </div>
            <% end %>
          </li>
        <% end %>
      </ul>
      <div class="px-4 py-3 border-t border-gray-200">
        <%= paginate @posts %>
      </div>
    <% else %>
      <div class="text-center py-12">
        <p class="text-gray-500 dark:text-gray-400">아직 게시글이 없습니다</p>
        <% if Current.user %>
          <p class="mt-2">
            <%= link_to "첫 게시글 작성하기", new_post_path, class: "text-indigo-600 dark:text-indigo-400 hover:text-indigo-500 dark:hover:text-indigo-300" %>
          </p>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
