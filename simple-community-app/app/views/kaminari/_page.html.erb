<%# Link showing page number
  - available local variables
    page:          a page object for "this" page
    url:           url to this page
    current_page:  a page object for the currently displayed page
    total_pages:   total number of pages
    per_page:      number of items to fetch per page
    remote:        data-remote
-%>
<% if page.current? %>
  <span class="inline-flex items-center justify-center min-w-[2.5rem] px-3 py-2 text-sm font-medium text-white bg-indigo-600 rounded-md"><%= page %></span>
<% else %>
  <%= link_to page, url, class: "inline-flex items-center justify-center min-w-[2.5rem] px-3 py-2 text-sm font-medium text-gray-700 bg-white border border-gray-300 rounded-md hover:bg-gray-50", remote: remote, rel: page.rel %>
<% end %>
