<div class="min-h-screen flex items-center justify-center bg-gray-50 py-12 px-4 sm:px-6 lg:px-8">
  <div class="max-w-md w-full space-y-8">
    <div>
      <h2 class="mt-6 text-center text-3xl font-extrabold text-gray-900">
        로그인
      </h2>
    </div>
    <%= form_with url: session_path, method: :post, class: "mt-8 space-y-6" do %>
      <div class="rounded-md shadow-sm space-y-4">
        <div>
          <%= label_tag :email_address, "이메일", class: "block text-sm font-medium text-gray-700 mb-2" %>
          <%= email_field_tag :email_address, nil, required: true, autofocus: true, 
              class: "block w-full px-4 py-3 rounded-lg border-2 border-gray-300 placeholder-gray-400 text-gray-900 focus:outline-none focus:ring-2 focus:ring-indigo-200 focus:border-indigo-500 transition duration-200 sm:text-sm",
              placeholder: "이메일 주소를 입력하세요" %>
        </div>
        <div>
          <%= label_tag :password, "비밀번호", class: "block text-sm font-medium text-gray-700 mb-2" %>
          <%= password_field_tag :password, nil, required: true,
              class: "block w-full px-4 py-3 rounded-lg border-2 border-gray-300 placeholder-gray-400 text-gray-900 focus:outline-none focus:ring-2 focus:ring-indigo-200 focus:border-indigo-500 transition duration-200 sm:text-sm",
              placeholder: "비밀번호를 입력하세요" %>
        </div>
      </div>

      <div>
        <%= submit_tag "로그인", class: "group relative w-full flex justify-center py-2 px-4 border border-transparent text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
      </div>

      <div class="text-center">
        <p class="text-sm text-gray-600">
          계정이 없으신가요?
          <%= link_to "회원가입", new_registration_path, class: "font-medium text-indigo-600 hover:text-indigo-500" %>
        </p>
      </div>
    <% end %>
  </div>
</div>
