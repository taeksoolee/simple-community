<div class="min-h-screen flex items-center justify-center bg-gray-50 py-12 px-4 sm:px-6 lg:px-8">
  <div class="max-w-md w-full">
    <div class="bg-white shadow-xl rounded-2xl p-8 sm:p-10">
      <div class="text-center mb-8">
        <h2 class="text-3xl font-extrabold text-gray-900">
          로그인
        </h2>
        <p class="mt-2 text-sm text-gray-600">
          Simple Community에 오신 것을 환영합니다
        </p>
      </div>
      <%= form_with url: session_path, method: :post, class: "space-y-6", data: { controller: "form", action: "submit->form#handleSubmit" } do %>
      <div class="space-y-5">
        <div>
          <%= label_tag :email_address, "이메일", class: "block text-sm font-medium text-gray-700 mb-2" %>
          <%= email_field_tag :email_address, nil, required: true, autofocus: true, 
              class: "block w-full px-4 py-3 rounded-lg border-2 border-gray-300 placeholder-gray-400 text-gray-900 focus:outline-none focus:ring-2 focus:ring-indigo-200 focus:border-indigo-500 transition duration-200 sm:text-sm",
              placeholder: "이메일 주소를 입력하세요",
              data: { form_target: "email", action: "blur->form#validateEmail input->form#clearErrorOnInput" } %>
        </div>
        <div>
          <%= label_tag :password, "비밀번호", class: "block text-sm font-medium text-gray-700 mb-2" %>
          <%= password_field_tag :password, nil, required: true,
              class: "block w-full px-4 py-3 rounded-lg border-2 border-gray-300 placeholder-gray-400 text-gray-900 focus:outline-none focus:ring-2 focus:ring-indigo-200 focus:border-indigo-500 transition duration-200 sm:text-sm",
              placeholder: "비밀번호를 입력하세요",
              data: { form_target: "password", action: "blur->form#validateRequired input->form#clearErrorOnInput" } %>
        </div>
      </div>

      <div class="pt-2">
        <%= submit_tag "로그인", class: "group relative w-full flex justify-center py-3 px-4 border border-transparent text-sm font-semibold rounded-lg text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 transition duration-200 shadow-md hover:shadow-lg" %>
      </div>

      <div class="text-center pt-4 border-t border-gray-200">
        <p class="text-sm text-gray-600">
          계정이 없으신가요?
          <%= link_to "회원가입", new_registration_path, class: "font-semibold text-indigo-600 hover:text-indigo-500 transition duration-200" %>
        </p>
      </div>
      <% end %>
    </div>
  </div>
</div>
